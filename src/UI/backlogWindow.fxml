<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="UI.backlogWindowController"
          xmlns:fx="http://javafx.com/fxml"
          prefHeight="200" prefWidth="320"
          alignment="center" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="60" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="40" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" percentHeight="5"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" percentHeight="10"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" percentHeight="40" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" percentHeight="40"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" percentHeight="5" />
    </rowConstraints>
    <children>
        <HBox spacing="5" alignment="CENTER_LEFT"  GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="12">
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="https://drive.google.com/open?id=1AIAyp9QamPCH9uzwQ7o4UtU7X-Hx5yr5" />
                </image>
            </ImageView>
            <Button mnemonicParsing="false" id="projectsButton" text="Projects"/>
            <Button mnemonicParsing="false" id="tasksButton"  text="Tasks" />
            <Button mnemonicParsing="false" id="usersButton"  text="Users" />
        </HBox>
        <HBox alignment="CENTER_RIGHT"  GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="1">
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true"/>
            <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1"/>
        </HBox>
        <Label text="Backlog" GridPane.rowIndex="1" />
        <Button contentDisplay="CENTER" mnemonicParsing="false" text="Create" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="BOTTOM_RIGHT"/>
        <ScrollPane GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="1" fitToWidth="true">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <TableView fx:id="sprint">
                            <columns>
                                <TableColumn fx:id="sprintTasksColumn" text="Sprint"/>
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
        <ScrollPane GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowSpan="2" fitToWidth="true">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <TableView fx:id="backlog">
                            <columns>
                                <TableColumn fx:id="backlogTasksColumn" text="Backlog"/>
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
        <ScrollPane GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.rowSpan="2" GridPane.columnSpan="1" fitToWidth="true" fitToHeight="true">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <TableView fx:id="task">
                            <columns>
                                <TableColumn fx:id="taskDetails" text="Task"/>
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="4" alignment="CENTER_RIGHT">
            <Button id="editTask" text="Edit"/>
        </VBox>
    </children>

</GridPane>